<Window x:Class="EvidenceZaměstnanců.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EvidenceZaměstnanců"
        mc:Ignorable="d"
        Title="AddWindow" Height="350" Width="700">
    <Grid Background="LightCoral">
        <TextBox HorizontalAlignment="Left" x:Name="Name" Margin="100,40,0,0" TextWrapping="Wrap" Text="Zadejte jméno" VerticalAlignment="Top" Width="250" Height="20"/>
        <TextBox HorizontalAlignment="Left"  x:Name="Surname" Margin="100,108,0,0" TextWrapping="Wrap" Text="Zadejte příjmení" VerticalAlignment="Top" Width="250" Height="20"/>
        <TextBox HorizontalAlignment="Left" x:Name="Id" Margin="100,172,0,0" TextWrapping="Wrap" Text="Zadejte ID" VerticalAlignment="Top" Width="250" Height="20"/>

        <Calendar x:Name="calendar" HorizontalAlignment="Left" Margin="480,137,0,0" VerticalAlignment="Top"/>
        
        <Button Content="Zaznamenat" HorizontalAlignment="Left" Width="70" Height="25" Margin="190,266,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>

<Window x:Class="EvidenceZaměstnanců.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EvidenceZaměstnanců"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="LightBlue">
        <Button Content="Přidat" x:Name="ADD" HorizontalAlignment="Left" Margin="151,320,0,0" VerticalAlignment="Top" Height="30" Width="70" Click="ADD_Click"/>
        <Button Content="Zobrazit" x:Name="SHOW" HorizontalAlignment="Left" Margin="569,320,0,0" VerticalAlignment="Top" Height="30" Width="70" Click="SHOW_Click"/>
        <Button Content="Smazat" x:Name="DEL" HorizontalAlignment="Left" Margin="432,320,0,0" VerticalAlignment="Top" Height="30" Width="70" Click="DEL_Click"/>
        <Button Content="Upravit" x:Name="EDIT" HorizontalAlignment="Left" Margin="294,320,0,0" VerticalAlignment="Top" Height="30" Width="70" Click="EDIT_Click"/>
        
        <ListBox x:Name="list" Background="LightGray" Height="200" Width="650" Margin="75,76,75,158" />
        
    </Grid>
</Window>
